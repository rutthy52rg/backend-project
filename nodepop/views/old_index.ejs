<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- CSS (load bootstrap from a CDN) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-start">
        <div class="col-sm-12 text-center mb-4">
          <h1><%= wellcome %> <%= title %></h1>
        </div>
        <div class="col-sm-12 text-center mb-4">
        </div>
        <div class="m-4">
          <div class="col-sm-12 mb-4">
            <h3><%= __('Filter') %></h3>
            <h3><%= __('i18n plural') %></h3>
            <p> 0 <%= __n('mouse', 0) %></p>
            <p> 1 <%= __n('mouse', 1) %></p>
            <p> 2 <%= __n('mouse', 2) %></p>
            <hr />
          </div>
          <form
            style="
              display: flex;
              flex-wrap: wrap;
              align-content: center;
              background-color: #f5f5f5;
              padding: 5px;
            "
          >
            <div class="form-group" style="width: 33%; margin: 5px">
              <label for="tags">Tags</label>
              <select name="tags" class="custom-select">
                <option value="">All</option>
                <% tagsArray.forEach(ele => { %>
                <option value="<%= ele %>"><%= ele %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group" style="width: 25%; margin: 5px">
              <label for="type">Type</label>
              <select name="sale" class="custom-select">
                <option value="">All</option>
                <option value="true">Sale</option>
                <option value="false">Buy</option>
              </select>
            </div>
            <div class="form-group" style="width: 33%; margin: 5px">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="name"
              />
            </div>
            <div class="form-group" style="width: 33%; margin: 5px">
              <label for="price"><%= __('Price') %></label>
              <select name="price" class="custom-select">
                <option value="">All</option>
                <option value="10€-50€">10€-50€</option>
                <option value="desde que 10€">desde que 10€</option>
                <option value="hasta 50€">hasta 50€</option>
                <option value="igual 50€">igual 50€</option>
              </select>
            </div>
            <div class="form-group" style="width: 20%; margin: 5px">
              <label for="order">Order</label>
              <select name="sort" class="custom-select">
                <option value="">Not order</option>
                <option value="name">name</option>
                <option value="price">price</option>
              </select>
            </div>
            <div
              class="form-group"
              style="
                width: 38%;
                margin: 5px;
                text-align: right;
                display: flex;
                align-items: end;
                justify-content: flex-end;
              "
            >
              <a href="http://localhost:3001" class="btn btn-secondary mr-2">
                Clear filter</a
              >
              <input type="submit" class="btn btn-secondary" value="Filter" />
            </div>
          </form>
        </div>
      </div>

      <div class="row" style="justify-content: flex-start">
        <div
          style="width: 100%; display: flex; justify-content: flex-end"
          class="mt-4"
        >
          <nav aria-label="...">
            <ul class="pagination pagination-sm">
              <li class="page-item active" aria-current="page">
                <span class="page-link">1</span>
              </li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
            </ul>
          </nav>
        </div>
          <% if (anouncements.length > 0) { %>
           <% anouncements.forEach(anouncement => { %>
        <div class="" style="width: 23rem; overflow: hidden; flex-wrap: wrap">
          <div class="card" style="height: 450px; margin: 10px">
            <div
              style="
                width: 100%;
                overflow: hidden;
                height: 250px;
                max-height: 250px;
                display: flex;
                justify-content: center;
                align-items: center;
                border-bottom: 1px solid #f5f5f5;
              "
            >
              <img
                src="<%=pictUrl%><%= anouncement.picture %>"
                class="card-img-top"
                alt="..."
                style="width: 100%"
              />
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= anouncement.name %></h5>
              <p class="card-text"><%= anouncement.price %> €</p>
              <p class="card-text" style="height: 50px">
                <%= anouncement.tags[1] %>
              </p>
              <a
                href="#"
                class="btn <% if (anouncement.sale) { %> btn-warning <% } else { %> btn-success <% } %>"
                style="float: right"
              >
                <% if (anouncement.sale) { %> SALE <% } else { %> BUY <% } %>
              </a>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p>NOT EXISTS PRODUCTS</p>
        <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
